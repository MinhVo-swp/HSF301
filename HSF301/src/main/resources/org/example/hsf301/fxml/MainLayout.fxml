<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefHeight="850.0" prefWidth="1700.0" xmlns="http://javafx.com/javafx/22"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hsf301.layouts.MainController">
  <VBox alignment="CENTER" layoutY="-3.0" prefHeight="850.0" prefWidth="250.0"
    style="-fx-background-color: #353A56;">
    <Button layoutX="10.0" layoutY="35.0" mnemonicParsing="false" onAction="#navigateHome"
      text="Home"/>
    <Button layoutX="10.0" layoutY="35.0" mnemonicParsing="false" onAction="#navigateMyProfile"
      text="My Profile"/>
    <Button layoutX="10.0" layoutY="35.0" mnemonicParsing="false" onAction="#navigateTour"
      text="Tours"/>
    <!-- view tour da dat, neu tour co status pending thi ko cho thanh toan, con neu processing ( bao gia) hien nut thanh toan ,
     neu chua thanh toan (processing| pending) thi cho phep cancel, (complete -> disable cancel)-->
    <!--  xem booking koi (read only) do staff tao -> get service len (nhan vao account) -->
    <!--    View purchase -> show  bookings with status (PENDING|SHIPPING|CANCEL) ->
     click to view detail show booking koi detail (fetch via booking id) -->
    <Button layoutX="10.0" layoutY="35.0" mnemonicParsing="false" onAction="#navigateBooking"
      text="Bookings"/>
    <Button layoutX="37.0" layoutY="352.0" mnemonicParsing="false" onAction="#navigatePurchasedTour"
      text="My Purchased Tour"/>
    <Button layoutX="10.0" layoutY="397.0" mnemonicParsing="false" onAction="#navigateBookingKoi"
      text="My Booking Koi"/>
    <Button mnemonicParsing="false" onAction="#navigateLogout"
      style="-fx-background-color: red; -fx-text-fill: white;" text="Logout"/>
  </VBox>
  <StackPane fx:id="contentArea"
    AnchorPane.leftAnchor="250.0"
    AnchorPane.topAnchor="0.0"
    AnchorPane.rightAnchor="0.0"
    AnchorPane.bottomAnchor="0.0"
    style="-fx-background-color: white;"/>
</AnchorPane>
