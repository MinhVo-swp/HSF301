<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefHeight="600.0" prefWidth="800.0"
  style="-fx-background-color: #f5f5f5;"
  xmlns="http://javafx.com/javafx/22"
  xmlns:fx="http://javafx.com/fxml/1">

  <!-- Header in the top section of the BorderPane -->
  <top>
    <HBox prefHeight="50.0" style="-fx-background-color: #34495e;" alignment="CENTER_LEFT">
      <Label text="Our available Tours!" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10;"/>

      <!-- CRUD buttons for managing tours -->
      <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 10 0 0;">
        <Button fx:id="createButton" onAction="#onCreate" text="Create" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="readButton" onAction="#onRead" text="Read" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="updateButton" onAction="#onUpdate" text="Update" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="deleteButton" onAction="#onDelete" text="Delete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;"/>
      </HBox>
    </HBox>
  </top>

  <!-- ScrollPane in the center section of the BorderPane -->
  <center>
    <ScrollPane style="-fx-background: #f5f5f5; -fx-background-color: transparent;">
      <GridPane fx:id="tourGrid" hgap="20" vgap="20" alignment="CENTER">
        <padding>
          <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Template for a single tour card (will be created programmatically) -->
        <fx:define>
          <VBox fx:id="tourCardTemplate" spacing="10" maxWidth="350" prefWidth="350"
            style="-fx-background-color: white;
                   -fx-border-color: #e0e0e0;
                   -fx-border-radius: 8;
                   -fx-background-radius: 8;
                   -fx-padding: 15;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

            <ImageView fx:id="tourImage" fitWidth="320" fitHeight="200" preserveRatio="true"/>

            <Label fx:id="tourName" wrapText="true"
              style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Label fx:id="tourDescription" wrapText="true"
              style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
              <Label fx:id="dateTimeLabel"
                style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
              <Label fx:id="priceLabel"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>

              <Label fx:id="availabilityLabel"
                style="-fx-font-size: 13px; -fx-text-fill: #95a5a6;"/>
            </HBox>

          </VBox>
        </fx:define>
      </GridPane>
    </ScrollPane>
  </center>
</BorderPane>
